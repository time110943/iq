            <i data-lucide="save"></i>
            حفظ التغييرات
        </button>
    </div>


    <script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>

<script type="module">
        // Initialize theme
        function initializeTheme() {
            const stored = localStorage.getItem("theme");
            const preferred = window.matchMedia("(prefers-color-scheme: light)").matches
                ? "light"
                : "dark";
            const theme = stored || preferred;
            document.documentElement.setAttribute("data-theme", theme);
            updateThemeIcon(theme);
        }

        function updateThemeIcon(theme) {
            document
                .querySelector("#themeToggle i")
                .setAttribute("data-lucide", theme === "dark" ? "sun" : "moon");
            lucide.createIcons();
        }

        initializeTheme();

        document.getElementById("themeToggle").addEventListener("click", () => {
            const cur = document.documentElement.getAttribute("data-theme");
            const next = cur === "dark" ? "light" : "dark";
            document.documentElement.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);
            updateThemeIcon(next);
        });

        // Set up player
        let player = null;
        let isLectureCompleted = false;

        // DOM references
        const teacherImage = document.getElementById("teacherImage");
        const teacherName = document.getElementById("teacherName");
        const teacherSubject = document.getElementById("teacherSubject");
        const teacherRating = document.getElementById("teacherRating");
        const videoTitle = document.getElementById("videoTitle");
        const videoDescription = document.getElementById("videoDescription");
        const categoryTitle = document.getElementById("categoryTitle");
        const classesList = document.getElementById("classesList");
        const teachersGrid = document.getElementById("teachersGrid");
        const playerContainer = document.getElementById("playerContainer");
        const videoLoader = document.getElementById("videoLoader");
        const favoriteTeachersSection = document.getElementById("favoriteTeachersSection");
        const favoriteTeachersGrid = document.getElementById("favoriteTeachersGrid");


        // Progress variables
        let lectureProgress = JSON.parse(localStorage.getItem("lectureProgress")) || {};
        let completedLectures = JSON.parse(localStorage.getItem("completedLectures")) || {};
        let ratings = JSON.parse(localStorage.getItem("ratings")) || {};
        let lastWatched = JSON.parse(localStorage.getItem("lastWatched")) || null;
        // NEW: Favorite teachers state
        let favoriteTeachers = JSON.parse(localStorage.getItem("favoriteTeachers")) || [];


        // Navigation
        const pages = {
            home: document.getElementById("homePage"),
            category: document.getElementById("categoryPage"),
            classes: document.getElementById("classesPage"),
            video: document.getElementById("videoPage"),
            dashboard: document.getElementById("dashboardPage")
        };

window.navigate = function(page) {
            window.scrollTo({ top: 0, behavior: "smooth" });

            if (page !== "video") {
                if (player) {
                    player.destroy();
                    player = null;
                }
                if (window.hlsInstance) {
                    window.hlsInstance.destroy();
                    window.hlsInstance = null;
                }
                if (window.progressInterval) {
                    clearInterval(window.progressInterval);
                    window.progressInterval = null;
                }
                playerContainer.innerHTML = "";
                videoLoader.style.display = 'none';
            }
            
            if (page === 'dashboard') {
                loadDashboardData();
            }

            Object.values(pages).forEach((p) => p.classList.remove("active"));
            pages[page].classList.add("active");
            lucide.createIcons();
        }

        /* ========= Teachers Data ========= */
        const searchInput = document.getElementById("searchInput");
        const searchBtn = document.getElementById("searchButton");
        let teachers = [];
        let currentTeacher = null;
        let currentClassIndex = 0;
        let currentLectureIndex = 0;
        let currentLectureLink = "";

        const categories = {
            "year-2026": {
                title: "الصفوف الدراسية 2026",
                endpoint: "https://edson2.netlify.app/data2.json"
            },
            "year-2025": {
                title: "الصفوف الدراسية 2025",
                endpoint: "https://edson2.netlify.app/data.json"
            },
            "distinguished": {
                title: "قسم المتميزين",
                endpoint: "https://edson2.netlify.app/ff.json"
            },
            "literary": {
                title: "القسم الأدبي",
                endpoint: "https://edson2.netlify.app/mm.json"
            }
        };

window.loadCategory = function(categoryId) {
            const category = categories[categoryId];
            if (!category) return;
            categoryTitle.textContent = category.title;
            loadData(category.endpoint);
            navigate("category");
        }

        // NEW: Toggle favorite teacher status and update UI
        window.toggleFavorite = (teacherId) => {
            const index = favoriteTeachers.indexOf(teacherId);
            if (index > -1) {
                favoriteTeachers.splice(index, 1);
            } else {
                favoriteTeachers.push(teacherId);
            }
            localStorage.setItem("favoriteTeachers", JSON.stringify(favoriteTeachers));
            renderTeachers();
        };

        function renderTeachers(list = teachers) {
            // Filter favorite teachers from the main list
            const favoriteTeacherData = list.filter(t => favoriteTeachers.includes(t.id));
            const otherTeachersData = list.filter(t => !favoriteTeachers.includes(t.id));
            
            // Render favorite teachers section
            if (favoriteTeacherData.length > 0) {
                favoriteTeachersSection.classList.add("active");
                favoriteTeachersGrid.innerHTML = "";
                favoriteTeacherData.forEach(t => renderTeacherCard(t, favoriteTeachersGrid));
            } else {
                favoriteTeachersSection.classList.remove("active");
            }
            
            // Render the rest of the teachers
            if (otherTeachersData.length > 0) {
                teachersGrid.innerHTML = "";
                otherTeachersData.forEach(t => renderTeacherCard(t, teachersGrid));
            } else if (list.length === 0) {
                teachersGrid.innerHTML = "<p style='text-align: center; color: var(--text);'>لا توجد نتائج مطابقة.</p>";
            } else {
                teachersGrid.innerHTML = "";
            }
            
            lucide.createIcons();
        }
        
        // Helper function to render a single teacher card
        function renderTeacherCard(t, container) {
            const isFavorite = favoriteTeachers.includes(t.id);
            const rating = ratings[t.id] || 0;
            const card = document.createElement("div");
            card.className = "teacher-card";
            card.innerHTML = `
                <div class="favorite-button-container">
                    <button class="btn-favorite ${isFavorite ? 'active' : ''}" onclick="event.stopPropagation(); toggleFavorite(${t.id});">
                        <i data-lucide="${isFavorite ? 'heart' : 'heart'}"></i>
                    </button>
                </div>
                <div class="teacher-card-inner" onclick="showTeacher(${t.id})">
                    <img class="teacher-img" src="${t.image}" alt="${t.name}" onerror="this.onerror=null;this.src='https://placehold.co/120x120/E2E8F0/A0AEC0?text=No+Image';">
                    <h3 class="teacher-name">${t.name}</h3>
                    <p class="teacher-subject">${t.subject}</p>
                    <div class="teacher-rating">${renderStars(rating)}</div>
                </div>
            `;
            container.appendChild(card);
        }


        function renderStars(rating) {
            let stars = "";
            for (let i = 1; i <= 5; i++) {
                stars += `<span class="star ${i <= rating ? "filled" : ""}">★</span>`;
            }
            return stars;
        }

        window.showTeacher = (id) => {
            currentTeacher = teachers.find((t) => t.id == id);
            if (!currentTeacher) return;
            teacherImage.src = currentTeacher.image;
            teacherImage.onerror = function() {
                this.onerror = null;
                this.src = 'https://placehold.co/120x120/E2E8F0/A0AEC0?text=No+Image';
            };
            teacherName.textContent = currentTeacher.name;
            teacherSubject.textContent = currentTeacher.subject;
            const rating = ratings[currentTeacher.id] || 0;
            teacherRating.innerHTML = renderStars(rating);
            renderClasses(currentTeacher.classes);
            navigate("classes");
        };
        
        function renderClasses(classesData) {
            classesList.innerHTML = classesData.map((cls, ci) => {
                const totalLectures = cls.lectures.length;
                const completedCount = cls.lectures.filter(lec => completedLectures[lec.url]).length;
                const lectures = cls.lectures.map((lec, li) => {
                    const isCompleted = !!completedLectures[lec.url];
                    return `
                        <div class="lecture-item ${isCompleted ? 'completed' : ''}" data-lecture-url="${lec.url}">
                            <div class="lecture-play-area" onclick="playLecture(${ci}, ${li}, '${lec.url}', '${lec.title}', '${lec.description}', '${currentTeacher.name}', '${currentTeacher.id}')">
                                <i data-lucide="play-circle"></i>
                                <span>${li + 1}. ${lec.title}</span>
                            </div>
                            <div class="lecture-actions">
                                <label class="completion-checkbox">
                                    <input type="checkbox" ${isCompleted ? 'checked' : ''} onchange="toggleLectureCompletion(event, '${lec.url}', this)"/>
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="star-burst"></div>
                        </div>
                    `;
                }).join("");
                return `
                    <div class="class-card card-glass">
                        <div class="class-header" onclick="toggleLectures(this)">
                            <div class="class-header-content">
                                <h3>${cls.name}</h3>
                                <span class="class-progress" data-class-index="${ci}">المكتمل: ${completedCount} / ${totalLectures}</span>
                            </div>
                            <i data-lucide="chevron-down" class="chevron-icon"></i>
                        </div>
                        <div class="lectures-list">${lectures}</div>
                    </div>
                `;
            }).join("");
            lucide.createIcons();
        }
        
        window.toggleLectureCompletion = (event, lectureUrl, checkbox) => {
            event.stopPropagation();
            const lectureItem = checkbox.closest('.lecture-item');
            const isCompleted = checkbox.checked;
            completedLectures[lectureUrl] = isCompleted;
            localStorage.setItem("completedLectures", JSON.stringify(completedLectures));

            lectureItem.classList.toggle('completed', isCompleted);
            if (isCompleted) {
                const starBurst = lectureItem.querySelector('.star-burst');
                starBurst.innerHTML = Array(8).fill(0).map(() => {
                    const translateX = (Math.random() - 0.5) * 80;
                    const translateY = (Math.random() - 0.5) * 80;
                    return `<div class="star-particle" style="--translateX: ${translateX}px; --translateY: ${translateY}px;"></div>`;
                }).join('');
                starBurst.classList.add('animate');
                setTimeout(() => {
                    starBurst.classList.remove('animate');
                    starBurst.innerHTML = '';
                }, 600);
            }
            updateClassProgress(lectureItem.closest('.class-card'));
        };

        function updateClassProgress(classCardElement) {
            const progressSpan = classCardElement.querySelector('.class-progress');
            const classIndex = parseInt(progressSpan.dataset.classIndex, 10);
            const classData = currentTeacher.classes[classIndex];
            const totalLectures = classData.lectures.length;
            const completedCount = classData.lectures.filter(lec => completedLectures[lec.url]).length;
            progressSpan.textContent = `المكتمل: ${completedCount} / ${totalLectures}`;
        }

        window.toggleLectures = (header) => {
            const list = header.parentElement.querySelector(".lectures-list");
            const icon = header.querySelector(".chevron-icon");
            const open = list.style.display !== "flex";
            list.style.display = open ? "flex" : "none";
            header.classList.toggle("open", open);
            icon.setAttribute("data-lucide", open ? "chevron-up" : "chevron-down");
            lucide.createIcons();
        };
        
        window.loadIframePlayer = (url) => {
            videoLoader.style.display = 'flex';
            const encodedUrl = btoa(url);
            const iframeUrl = `https://soft-sea-74e7.smyzx8.workers.dev/proxy_iframe?url=${encodedUrl}`;
            const iframeHtml = `
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
                    <iframe 
                        src="${iframeUrl}" 
                        allowfullscreen 
                        loading="eager"
                        style="width: 100%; height: 100%; border: none; border-radius: inherit;"
                        referrerpolicy="no-referrer-when-downgrade"
                        allow="autoplay; accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; fullscreen"
                        onload="document.getElementById('videoLoader').style.display='none';"
                    ></iframe>
                </div>
            `;
            playerContainer.innerHTML = iframeHtml;
        }

        window.playLecture = (ci, li, url, title, desc, teacherNameParam, teacherIdParam) => {
            if (player) {
                player.destroy();
                player = null;
            }
            if (window.hlsInstance) {
                window.hlsInstance.destroy();
                window.hlsInstance = null;
            }
            if (window.progressInterval) {
                clearInterval(window.progressInterval);
                window.progressInterval = null;
            }
            
            isLectureCompleted = !!completedLectures[url];

            playerContainer.innerHTML = "";
            videoLoader.style.display = 'none';

            [currentClassIndex, currentLectureIndex, currentLectureLink] = [ci, li, url];
            videoTitle.textContent = title;
            videoDescription.textContent = desc;
            document.getElementById('videoTeacherName').textContent = teacherNameParam || (currentTeacher ? currentTeacher.name : 'اسم الأستاذ');
            document.getElementById('videoSubjectName').textContent = currentTeacher ? currentTeacher.subject : 'المادة';
            
            lastWatched = {
                teacherId: teacherIdParam || (currentTeacher ? currentTeacher.id : null),
                teacherName: teacherNameParam || (currentTeacher ? currentTeacher.name : null),
                classIndex: ci,
                lectureIndex: li,
                lectureTitle: title,
                lectureUrl: url,
                lectureDescription: desc
            };
            localStorage.setItem("lastWatched", JSON.stringify(lastWatched));
            
            navigate("video");
            
            let finalVideoUrl = url;
            let isHLS = finalVideoUrl.endsWith(".m3u8");
            let useProxy = true;
            const referer = "https://abwaab.com";
            const directPlayDomains = ["https://9bf9f797be0a4677a8-akamai-cdn.com", "https://vidcdn.akamai-cdn-delivery.com"];
            
            if (url.startsWith("https://f2l-bot828-40f1f76157f8.herokuapp.com") && url.endsWith(".mp4")) {
                useProxy = false;
                isHLS = false;
            } else if (url.includes("iframe.mediadelivery.net/embed/")) {
                loadIframePlayer(url);
                return; 
            } else if (url.includes("iframe.mediadelivery.net/embed/")) {
                const urlParts = url.split('/');
                const videoId = urlParts[urlParts.length - 1];
                const libraryId = urlParts[urlParts.length - 2];
                finalVideoUrl = `https://vz-${libraryId}.becdn.net/${videoId}/playlist.m3u8`;
                isHLS = true;
                useProxy = !directPlayDomains.some(domain => finalVideoUrl.startsWith(domain));
            } else {
                useProxy = !directPlayDomains.some(domain => finalVideoUrl.startsWith(domain));
            }
            
            const proxiedUrl = useProxy && isHLS ? `https://soft-sea-74e7.smyzx8.workers.dev/?url=${encodeURIComponent(finalVideoUrl)}&referer=${encodeURIComponent(referer)}` : finalVideoUrl;
            
            playerContainer.innerHTML = `<video id="player" playsinline controls></video>`;
            lucide.createIcons();
            
            const videoElement = document.getElementById("player");
            const savedTime = lectureProgress[url] ? (lectureProgress[url] / 100) * (player?.duration || 0) : 0;
            const playerControls = ["rewind", "play-large", "play", "fast-forward", "progress", "current-time", "settings", "fullscreen"];

            player = new Plyr("#player", {
                controls: playerControls,
                keyboard: { focused: true, global: true },
                tooltips: { controls: true, seek: true },
                captions: { active: false },
                settings: ["quality", "speed"],
                speed: { selected: 1, options: [0.5, 0.75, 1, 1.25, 1.5, 2] },
            });

            window.progressInterval = setInterval(() => {
                if (player && player.duration > 0) {
                    const progress = (player.currentTime / player.duration) * 100;
                    lectureProgress[url] = progress;
                    localStorage.setItem("lectureProgress", JSON.stringify(lectureProgress));
                }
            }, 5000);

            function tryPlay() {
                if (isHLS && Hls.isSupported()) {
                    const hls = new Hls();
                    window.hlsInstance = hls;
                    hls.attachMedia(videoElement);
                    hls.loadSource(proxiedUrl);
                    hls.on(Hls.Events.MANIFEST_PARSED, () => {
                        player.play().then(() => { if (savedTime > 0) player.currentTime = savedTime; }).catch(console.error);
                    });
                    hls.on(Hls.Events.ERROR, (_, data) => {
                        if (data.fatal) {
                            switch (data.type) {
                                case Hls.ErrorTypes.NETWORK_ERROR: hls.startLoad(); break;
                                case Hls.ErrorTypes.MEDIA_ERROR: hls.recoverMediaError(); break;
                                default: break;
                            }
                        }
                    });
                } else {
                    player.source = {
                        type: "video",
                        sources: [{ src: proxiedUrl, type: isHLS ? "application/x-mpegURL" : "video/mp4" }],
                    };
                    player.play().then(() => { if (savedTime > 0) player.currentTime = savedTime; }).catch(() => console.log("تعذر تشغيل الفيديو"));
                }
            }
            tryPlay();
        };

        /* ========= Search ========= */
        function handleSearch() {
            const term = searchInput.value.trim().toLowerCase();
            renderTeachers(teachers.filter(t => t.name.toLowerCase().includes(term) || t.subject.toLowerCase().includes(term)));
        }

        let searchTimeout;
        searchInput.addEventListener("input", () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(handleSearch, 250);
        });
        searchBtn.addEventListener("click", handleSearch);

        /* ========= Load Data ========= */
        function loadData(endpoint) {
            const err = '<p style="color:var(--error); text-align: center;">حدث خطأ في تحميل البيانات.</p><button class="btn back-button" onclick="location.reload()" style="display: block; margin: 1rem auto;">إعادة المحاولة</button>';
            teachersGrid.innerHTML = Array(3).fill(`
                <div class="loading-card teacher-card">
                    <div style="width: 120px; height: 120px; background: var(--border); border-radius: 50%; margin: 0 auto 1rem;"></div>
                    <div style="height: 1.2rem; background: var(--border); border-radius: 4px; margin-bottom: 0.5rem; width: 80%; margin-left: auto; margin-right: auto;"></div>
                    <div style="height: 1rem; background: var(--border); border-radius: 4px; width: 60%; margin-left: auto; margin-right: auto;"></div>
                </div>`).join('');
            favoriteTeachersGrid.innerHTML = '';
            favoriteTeachersSection.classList.remove("active");

            fetch(endpoint, { headers: { Referer: "https://careful-burnt-honesty.glitch.me/", "Cache-Control": "no-cache" } })
                .then((r) => { if (!r.ok) throw new Error(); return r.json(); })
                .then((data) => { 
                    teachers = data.teachers; 
                    renderTeachers(); 
                })
                .catch(() => { teachersGrid.innerHTML = err; });
        }
        
        /* ========= Dashboard Logic ========= */
        const profilePictureEl = document.getElementById('profilePicture');
        const profilePictureInputEl = document.getElementById('profilePictureInput');
        const dreamInputEl = document.getElementById('dreamInput');
        const gradeInputEl = document.getElementById('gradeInput');
        const saveDashboardButton = document.getElementById('saveDashboardButton');
        const headerProfilePicEl = document.getElementById('headerProfilePic');
        const defaultUserIconEl = document.getElementById('defaultUserIcon');
        const uploadProfilePicBtn = document.getElementById('uploadProfilePicBtn');

        function updateHeaderProfilePic() {
            const profile = JSON.parse(localStorage.getItem('userProfile')) || {};
            const placeholder = "https://placehold.co/150x150";
            if (profile.picture && !profile.picture.startsWith(placeholder)) {
                headerProfilePicEl.src = profile.picture;
                headerProfilePicEl.style.display = 'block';
                defaultUserIconEl.style.display = 'none';
            } else {
                headerProfilePicEl.style.display = 'none';
                defaultUserIconEl.style.display = 'block';
            }
        }

        function loadDashboardData() {
            const profile = JSON.parse(localStorage.getItem('userProfile')) || {};
            if (profile.picture) {
                profilePictureEl.src = profile.picture;
            }
            if (profile.dream) {
                dreamInputEl.value = profile.dream;
            }
            if (profile.grade) {
                gradeInputEl.value = profile.grade;
            }
            updateHeaderProfilePic();
        }
        
        uploadProfilePicBtn.addEventListener('click', () => {
            profilePictureInputEl.click();
        });
        
        profilePictureInputEl.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    profilePictureEl.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
        
        saveDashboardButton.addEventListener('click', () => {
            const profile = {
                picture: profilePictureEl.src,
                dream: dreamInputEl.value,
                grade: gradeInputEl.value
            };
            localStorage.setItem('userProfile', JSON.stringify(profile));
            updateHeaderProfilePic();
            
            saveDashboardButton.innerHTML = '<i data-lucide="check"></i> تم الحفظ بنجاح!';
            lucide.createIcons();
            setTimeout(() => {
                saveDashboardButton.innerHTML = '<i data-lucide="save"></i> حفظ التغييرات';
                lucide.createIcons();
            }, 2000);
        });

        /* ========= Modal Logic ========= */
        const telegramModal = document.getElementById("telegramModal");
        const continueWithoutSubscribingBtn = document.getElementById("continueWithoutSubscribingBtn");
        const continueWatchingToast = document.getElementById("continueWatchingToast");
        const lastWatchedTeacherName = document.getElementById("lastWatchedTeacherName");
        const lastWatchedLectureTitle = document.getElementById("lastWatchedLectureTitle");
        const continueNowBtn = document.getElementById("continueNowBtn");
        const closeToastBtn = document.getElementById("closeToastBtn");

        function showTelegramModal() {
            const hasSubscribed = localStorage.getItem("telegramSubscribed");
            if (!hasSubscribed) {
                telegramModal.classList.add("show");
                lucide.createIcons();
            } else {
                showContinueWatchingToast();
            }
        }

        function hideTelegramModal() {
            telegramModal.classList.remove("show");
        }

        continueWithoutSubscribingBtn.addEventListener("click", () => {
            localStorage.setItem("telegramSubscribed", "true");
            hideTelegramModal();
            showContinueWatchingToast();
        });

        document.querySelector(".btn-telegram").addEventListener("click", () => {
            localStorage.setItem("telegramSubscribed", "true");
            hideTelegramModal();
            showContinueWatchingToast();
        });

        function showContinueWatchingToast() {
            const lastWatched = JSON.parse(localStorage.getItem("lastWatched"));
            if (lastWatched) {
                lastWatchedTeacherName.textContent = lastWatched.teacherName;
                lastWatchedLectureTitle.textContent = lastWatched.lectureTitle;
                continueWatchingToast.classList.add("show");
                lucide.createIcons();
                
                // Automatically hide after 10 seconds
                setTimeout(() => {
                    hideContinueWatchingToast();
                }, 10000);
            }
        }

        function hideContinueWatchingToast() {
            continueWatchingToast.classList.remove("show");
        }
        
        closeToastBtn.addEventListener("click", () => {
            hideContinueWatchingToast();
        });

        continueNowBtn.addEventListener("click", () => {
            hideContinueWatchingToast();
            const lastWatched = JSON.parse(localStorage.getItem("lastWatched"));
            if (lastWatched) {
                const categoryKeys = Object.keys(categories);
                let foundTeacher = false;
                for (const categoryId of categoryKeys) {
                    const category = categories[categoryId];
                    fetch(category.endpoint, { headers: { Referer: "https://careful-burnt-honesty.glitch.me/", "Cache-Control": "no-cache" } })
                        .then(response => response.json())
                        .then(data => {
                            if (foundTeacher) return;
                            const teacher = data.teachers.find(t => t.id === lastWatched.teacherId);
                            if (teacher) {
                                currentTeacher = teacher;
                                playLecture(lastWatched.classIndex, lastWatched.lectureIndex, lastWatched.lectureUrl, lastWatched.lectureTitle, lastWatched.lectureDescription, lastWatched.teacherName, lastWatched.teacherId);
                                foundTeacher = true;
                            }
                        })
                        .catch(error => console.error("Error loading teacher data:", error));
                    if (foundTeacher) break;
                }
            }
        });

        window.addEventListener("load", () => {
            setTimeout(showTelegramModal, 1000);
            loadDashboardData();
        });

        // Initialize
        lucide.createIcons();
    </script>
</body>
</html>
